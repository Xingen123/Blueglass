/* pages/uclickThiTab/uclickMe/index.wxss */
@import "../../../lib/css/common.wxss";

.me-container{
  width: 100%;
  height:290rpx;
  background-color: white;
  /* background-image: url("../../../images/my/bjt.jpg") no-repeat center */
}

.me-headimage-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
button{
  background: #fff;
  margin: 0;
}
button::after{
  border: none;
}

.me-head-image{
  display: block;
  overflow:hidden;
  margin-top: 50rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  z-index: 999;
}
.me-name{
  margin-top: 10rpx;
  font-size: 38rpx;
  color: rgb(51, 51, 51);
  z-index: 999;

}
.me-top-backgroudImage{
  background: #ff7200;
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0;
  z-index: 888
}

.me-middle-padding{
  width: 100%;
  height: 20rpx;
  background: #f5f5f5
}

.me-bindPhone{
  display: flex;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #dcdcdc;
}

.me-bindPhone-phone{
  display: flex;
  width: calc(100% - 0rpx);
  margin: 0 auto;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #dcdcdc;
}


.me-bindPhone-button{
  display: flex;
  width: calc(100% - 0rpx);
  margin: 0 auto;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #dcdcdc;
}
.me-leftimg{
  display: flex;
  align-items: center;
}
.me-bindPhoneImage{
  width: 36rpx;
  height: 36rpx; 
}

.me-bindPhoneText{
  padding-top: -5rpx;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: rgb(102, 102, 102);
}

.me-arrowImage{
  width: 12rpx;
  height: 20rpx;
