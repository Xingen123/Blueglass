/* pages/uclickThiTab/uclickBindMobile/uclickBindMobile.wxss */
@import "../../../lib/css/common.wxss";
.bind-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bind-phoneInput{
  margin-top: 120rpx;
  width: calc(100% - 60rpx);
  color: #666666;
  border-bottom: 2rpx solid #dedede;
}

.placeholder{
  color: #666666;
  font: 36rpx;
}

.bind-codeView{
  width: calc(100% - 60rpx);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100rpx;
  border-bottom:  2rpx solid #dedede;
  align-items: center;
}

.bind-codeButton{
  margin:0;
  padding: 0;
  color: #0080ba;
  font-size: 38rpx;
  background-color: rgba(0, 0, 0, 0);
  /* margin-top: 15rpx; */
}

.bind-codeButton::after{
  border: none;

}


.bind-codeInput{
  /* margin-top: 49rpx; */
  color: #333333;
  height: 100rpx;
}

.bind-sureButton{
  width: calc(100% - 60rpx);
  margin-top: 100rpx;
  background-color:#0080ba;
  color: white;
  font-size: 38rpx;
}
