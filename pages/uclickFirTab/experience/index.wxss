/* pages/uclickFirTab/experience/index.wxss */
@import "../../../lib/css/common.wxss";

.hide {
  display: none;
}

.show {
  display: block;
}

#myVideo {
  width: 100%;
  /* height: 1000rpx; */
  overflow: hidden;
  z-index: 999;
}

.swiperimg {
  width: 100%;
  height: 1000rpx;
}

.slide-image {
  width: 100%;
  height: 1000rpx;
}

.swiper_fixed {
  position: relative;
}

.video_btn {
  position: absolute;
  bottom: 30rpx;
  right: 10rpx;
  color: #fff;
  border: 2px solid #dcdcdc;
  font-size: 24rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  width: 150rpx;
  border-radius: 50rpx;
}

.be_title {
  font-size: 38rpx;
  color: #333;
  margin: 30rpx 30rpx 10rpx 30rpx;
  line-height: 1.6;
}

.be_desc {
  font-size: 28rpx;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  color: #666;
  line-height: 1.6;
  border-bottom: 2rpx solid #dedede;
  padding-bottom: 30rpx;
}

.be_address {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  padding-top: 20rpx;
}

.be_address_left image {
  height: 26rpx;
  width: 22rpx;
}

.be_address_left text {
  font-size: 28rpx;
  color: #333;
  margin-left: 6rpx;
}

.be_address_right {
  font-size: 24rpx;
  color: #999;
}

.be_address_right image {
  height: 18rpx;
  width: 10rpx;
}

.be_time {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #dedede;
}

.be_time_left image {
  height: 24rpx;
  width: 24rpx;
}

.be_time_left text {
  font-size: 28rpx;
  color: #333;
  margin-left: 6rpx;
}

view, page {
  padding: 0px;
  margin: 0px;
}

.page {
  height: 100%;
}

.navbar {
  display: flex;
  /* position: absolute; */
  z-index: 500;
  top: 0;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  box-sizing: border-box;
  border-bottom: 2rpx solid #dedede;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.navbar__item {
  position: relative;
  display: block;
  flex: 1;
  text-align: center;
  font-size: 0;
  /* <!-- NavBar的总高度为：height + padding-top + padding-bottom = 68rpx --> */
}

.navbar__item_on {
  color: #0082bf;
}

.navbar_title {
  color: #333;
  display: inline-block;
  font-size: 32rpx;
  max-width: 8em;
  text-align: center;
}

.navbar_title_cur {
  color: #0082ba;
  border-bottom: 2rpx solid #0082bf;
  height: 75rpx;
}

.swiper {
  height: 100%;
}

.swiper-item {
  width: 100%;
  padding-top: 20rpx;
  text-align: center;
}

.doyen {
}

.doyen_fir {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #dedede;
}

.doyen_info {
}

.doyen_info_title {
  font-size: 32rpx;
  text-align: left;
  color: #333;
}

.doyen_info_label {
  text-align: justify;
}

.doyen_info_label view {
  background: #0082bf;
  padding: 0 20rpx;
  border-radius: 6rpx;
  margin: 20rpx 20rpx 0 0;
  float: left;
  font-size: 30rpx;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
}

.doyen_img image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}

/* 个人介绍 */

.doyen_per {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #dedede;
  text-align: left;
}

.doyen_per_intr {
  font-size: 32rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
  color: #333;
}

.doyen_per_desc {
  font-size: 28rpx;
  line-height: 1.7;
  color: #333;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* -webkit-line-clamp: 3; */
  overflow: hidden;
  text-overflow: ellipsis;
}

.doyen_per_seemore {
  color: #0082ba;
  font-size: 26rpx;
}
.img_default{
  height: 250rpx;
  width: 250rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: -15%;
  bottom: 0;
  margin: auto;
}
/* 购买按钮 */

.pay {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  /* line-height: 100rpx; */
  text-align: center;
  width: 100%;
  background: #fff;
  /* border-top: 2rpx solid #dedede; */
  box-sizing: border-box;
  border-radius: none;
}

.pay button {
  background: #fff;
  border: none;
  height: 100rpx;
  border-radius: 0;
  padding: 0;
  /* line-height: 100rpx; */
  margin: 0;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 100%;
 
}

.share {
  flex: 1;
  background: #fff;
  border: none;
  height: 100rpx;
  border-radius: 0;
}

.share image {
  height: 40rpx;
  width: 42rpx;
}

button::after {
  border-radius: 0;
}

.login_btn {
  background: #68c1de;
  color: #fff;
  font-size: 32rpx;
  flex: 2;
  border-radius: 0;
   justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.alone_pay {
  background: #68c1de;
  color: #fff;
  font-size: 32rpx;
  flex: 2;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.group_buy {
  background: #0082bf;
  color: #fff;
  font-size: 32rpx;
  flex: 2;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.pay_desc {
  font-size: 24rpx;
}

/* 体验详情 */

.group_num {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #dedede;
  font-size: 32rpx;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  box-sizing: border-box;
}

.reserve {
  font-size: 32rpx;
  color: #333;
  padding: 30rpx 0 20rpx 30rpx;
}

.nav {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 18px;
  white-space: nowrap;
  z-index: 99;
  margin-top: 20rpx;
  margin-left: 20rpx;
  padding-right: 30rpx;
}

.nav_img {
  width: 300rpx;
  display: inline-block;
  text-align: center;
  position: relative;
  margin-right: 10rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.nav_img.active {
  color: red;
}

.nav_title {
  color: #363636;
  width: 300rpx;
  clear: both;
  white-space: pre-line;
  font-size: 26rpx;
  line-height: 1.5;
  margin-top: 10rpx;
}

.nav_img image {
  height: 200rpx;
  width: 300rpx;
  float: left;
  margin-right: 20rpx;
}

/* 精选评论 */

.score {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: calc(100% - 60rpx);
  margin: 0 auto;
}

.score_num {
  font-size: 38rpx;
  /* font-weight: bold; */
  color: #333;
  margin-right: 26rpx;
  /* padding: 20rpx 0; */
  padding-top: 20rpx;
}

.score_star {
  overflow: hidden;
}

.score_star image {
  height: 24rpx;
  width: 24rpx;
  float: left;
  margin-right: 10rpx;
}

.score_person {
  font-size: 24rpx;
  color: #333;
}

.score_person image {
  height: 16rpx;
  width: 20rpx;
}

.comment {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  /* border-bottom: 2rpx solid #dedede; *//* padding-bottom: 20rpx; */
}

.comment_con {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #dedede;
}

.comment_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment_left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment_right {
  margin-left: 20rpx;
}

.comment_right text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.score_xstar {
  margin-top: -20rpx;
}

.score_xstar image {
  height: 18rpx;
  width: 18rpx;
  margin-right: 5rpx;
}

.comment_time {
  font-size: 24rpx;
  color: #666;
}

.comment_head image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.comment_desc {
  font-size: 26rpx;
  color: #333;
  padding-top: 5rpx;
}
